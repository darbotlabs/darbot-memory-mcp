<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <OutputType>Exe</OutputType>
    <PublishSingleFile>false</PublishSingleFile>
    <SelfContained>false</SelfContained>
    
    <!-- NuGet Package Information -->
    <PackageId>Darbot.Memory.Mcp.Server</PackageId>
    <Title>Darbot Memory MCP Server</Title>
    <PackageDescription>Enterprise-grade Model Context Protocol (MCP) server for persistent conversational audit trails. Provides cryptographic integrity, multiple storage backends, and comprehensive REST API for conversational intelligence platforms.</PackageDescription>
    <Authors>Darbot Labs</Authors>
    <Company>Darbot Labs</Company>
    <Product>Darbot Memory MCP</Product>
    <Copyright>Copyright Â© 2024 Darbot Labs</Copyright>
    <PackageTags>mcp;model-context-protocol;server;conversation;memory;ai;chatbot;audit-trail;enterprise;rest-api</PackageTags>
    <PackageProjectUrl>https://github.com/darbotlabs/darbot-memory-mcp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/darbotlabs/darbot-memory-mcp.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    
    <!-- Tool Package Configuration -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>darbot-memory-mcp</ToolCommandName>
    <PackageOutputPath>../../../nupkg</PackageOutputPath>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.16" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Darbot.Memory.Mcp.Core/Darbot.Memory.Mcp.Core.csproj" />
    <ProjectReference Include="../Darbot.Memory.Mcp.Storage/Darbot.Memory.Mcp.Storage.csproj" />
  </ItemGroup>

</Project>
